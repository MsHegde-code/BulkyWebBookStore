@page
@model BulkyWeb_RazorPage.Pages.categories.DeleteModel

<div class="container">
	<div class="row">
		<div class="col-6">
			<h1>Delete category</h1>
		</div>
	</div>
	<form method="post">
		<div class="row m-1">
			<label asp-for="category.Name"></label>
			<input asp-for="category.Name" class="form-control" disabled/>
		</div>
		<div class="row m-1">
			<label asp-for="category.DisplayOrder"></label>
			<input asp-for="category.DisplayOrder" class="form-control" disabled />
		</div>
		<div class="row m-1">
			<div class="col-6">
				<button class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-page="/categories/Index" class="btn btn-secondary border form-control">Back to List</a>
			</div>
		</div>
	</form>
</div>