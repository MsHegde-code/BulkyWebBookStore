<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Company List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row text-end pb-4">
			<div class="col-12">
				<a asp-action="Upsert" class="btn btn-primary">Create</a>
			</div>
		</div>
		<div class="row">
			<table class="table table-bordered table-striped " id="tblDataComp" width="100%">
				<thead>
					<tr>
						<th>Name</th>
						<th>Address</th>
						<th>City</th>
						<th>State</th>
						<th>Phone Number</th>
						<th></th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/js/company.js"></script>
}