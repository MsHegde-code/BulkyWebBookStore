@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete a Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="border p-4">
			<input asp-for="Id" hidden>
			<div class="form-floating py-2 col-12">
				<input asp-for="Title" class="form-control border-0 shadow" disabled/>
				<label asp-for="Title" class="ms-2"></label>				
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="ISBN" class="form-control border-0 shadow" disabled />
				<label asp-for="ISBN" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Author" class="form-control border-0 shadow" disabled />
				<label asp-for="Author" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
				<label asp-for="ListPrice" class="ms-2"></label>
			</div>
			<div class="row mt-3">
				<div class="col-6 col-md-3">
					<button class="btn btn-danger form-control">Delete</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Product" asp-action="Index" class="form-control btn btn-secondary">
						<i class="bi bi-box-arrow-left"></i> Back to Product List	</a>
				</div>
			</div>
		</form>
	</div>
</div>
