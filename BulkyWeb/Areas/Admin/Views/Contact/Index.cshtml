@model Contact
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Contact Us</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3">
			<div class="form-floating py-2 col-2">
				<input asp-for="EmailAddress" class="form-control border-0 shadow" />
				<label asp-for="EmailAddress" class="ms-2"></label>
				<span asp-validation-for="EmailAddress" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-2">
				<input asp-for="UserQuery" class="form-control border-0 shadow" />
				<label asp-for="UserQuery" class="ms-2"></label>
				<span asp-validation-for="UserQuery" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col-6">
					<button type="submit" class="btn btn-primary form-control">Create</button>
				</div>
				<div class="col-6">
					<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control">
						<i class="bi bi-box-arrow-left"></i> Back to Home
					</a>
				</div>
			</div>
			</div>
		</form>
	</div>
</div>

