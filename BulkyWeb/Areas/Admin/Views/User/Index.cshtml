@model List<Product>

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Active Users List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 mb-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create new User
                    </a>
                </div>
            </div>
            @*here we are using the DataTable plugin which is executed by product.js file*@
            <table id="tblData" class="table table-bordered table-striped " width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Company</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/users.js"></script>
}